<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none">

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/book_pic_detail"
            android:src="@drawable/book_pic"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/book_name_detail"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textColor="#FFFFFF"
                android:layout_height="match_parent"
                android:text="第一行代码sdsdsdsdsdsdsdsdsdsds"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="30dp"
                android:gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/btn_edit"
                android:src="@android:drawable/ic_menu_edit"
                android:background="@color/colorAccent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="500dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:text="信息"
                        android:layout_marginLeft="50dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="50dp"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:src="@drawable/author"/>
                    <TextView
                        android:id="@+id/author_detail"
                        android:text="加谷一"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="50dp"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:src="@drawable/press"/>
                    <TextView
                        android:id="@+id/press_detail"
                        android:text="上海人民美术出版社"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="50dp"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:src="@drawable/presstime"/>
                    <TextView
                        android:id="@+id/press_time_detail"
                        android:text="2016-1"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="50dp"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:src="@drawable/isbn"/>
                    <TextView
                        android:id="@+id/isbn_detail"
                        android:text="9787532297252"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:text="详情"
                        android:layout_marginLeft="50dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="50dp"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:src="@drawable/readingstate1"/>
                    <TextView
                        android:id="@+id/readingstate_detail"
                        android:text="已读"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="50dp"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:src="@drawable/bookshelf1"/>
                    <TextView
                        android:id="@+id/bookshelf_detail"
                        android:text="默认书架"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="50dp"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:src="@drawable/label1"/>
                    <TextView
                        android:id="@+id/label_datail"
                        android:text="计算机(标签)"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="50dp"
                        android:layout_width="25dp"
                        android:layout_height="50dp"
                        android:src="@drawable/source1"/>
                    <TextView
                        android:id="@+id/book_source_detail"
                        android:text="douban.com"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                </LinearLayout>

            </LinearLayout>

    </LinearLayout>



    
    
</LinearLayout>
 </ScrollView>